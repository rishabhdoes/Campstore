<% layout('layots/boilerplate') %>


<div class="col-6 offset-3">
  <h1>All campgrounds</h1>
  

  <% for(let campground of campgrounds) {%>

  <div class="card mb-3">
    <div class="row">

      <div class="col-md-4">

        <img class="img-thumbnail" src="<%=campground.images[0].url%> " alt="" >
          
         <h5><%= campground.location %></h5>
      </div>

      <div class="col-md-8">
       
        <div class="card-body">
            <h4 class="card-title"> <%= campground.title  %> </h4>
            <p class="card-text"> <%= campground.description%>
            
                
            </p>
          
            <a class="btn btn-primary"   href="campgrounds/<%= campground._id%> ">view <%= campground.title %> </a>
        </div>

      </div>

    </div>

  
  
 

</div>
   <% } %>
</div>
