<% layout('layots/boilerplate') %>



<div class="row">
    <div class="col-6">
      <div class="card" style="width:28rem">
        <img src="<%= campground.image %>" class="card-img-top" alt="photo" >
        <div class="card-body">
          <h5 class="card-title"><%= campground.title %></h5>
          <p class="card-text">
            <%= campground.description %>
          </p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item text-muted"><%= campground.location %></li>
          <li class="list-group-item  "> Author: <%= campground.author.username %></li>
          <li class="list-group-item  text-muted"> $<%= campground.price %>/night</li>
          <% currentuser %> 
        </ul>
             <% if((currentuser) && campground.author.equals(currentuser._id)) { %>

            <div class="card-body">
            <form   class="d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
            <button class="btn btn-danger">Delete</button>
            </form>
          
          <a class="btn btn-primary"  href="/campgrounds/<%=campground._id%>/edit" class="card-link">Edit Campground</a>
          
          <div class="card-footer text-muted">
              2 Days ago
          </div>

        </div>

      <% } %> 

      </div>
         
           
    </div>

    <div class="col-6">

        <% if(currentuser){ %>       
      <h1> Leave a Review</h1>
      <form action="/campgrounds/<%=campground._id%>/reviews" class="mb-3 needs-validation"  method="POST"  novalidate>
        
        <div class="mb-3">
          <label class="form-control" for="rating"> rating</label>
          <input  class="form-range" type="range" name="review[rating]" id="rating" min="1" max="5" required>
         </div>


` 
        <div class="mb-3">
          <label class="form-control" for="body"> Review</label>
          <textarea name="review[body]" class="form-control "id="body" cols="30" rows="3" required></textarea>
         
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
         
          <button class="btn btn-success" type="submit">submit</button>
      </form>
      <% } %> 
      <h2>Reviews</h2>
      
      <% for(let review of campground.reviews) {%>
        <div class="card mb-3">

        <div class="card-body">
        
        <p>
          <h5 class="card-title">Rating: <%=review.rating %></h5>
          
          <h6 class="card-subtitle mb-2 text-muted">By <%= review.author.username %> </h6>
          <br>
         Review: <%=review.body %> 
         
        </p>
        <% if((currentuser) && review.author.equals(currentuser._id)) { %>
           <form action="/campgrounds/<%=campground._id%>/reviews/<%=review._id%>?_method=DELETE" method="post">
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
          </form> 
          <% } %> 
        </div>
      </div>
      <% } %>
      

    </div>

  </div>

 

 
